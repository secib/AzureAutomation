{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountName": {
            "type": "String",
            "metadata": {
                "description": "Automation account name"
            }
        },
        "runbookName1": {
            "type": "String",
            "metadata": {
                "description": "Runbook name"
            }
        },
        "runbookPublishContentLink1": {
            "type": "String",
            "metadata": {
                "description": "Runbook content link"
            }
        },
        "runbookName2": {
            "type": "String",
            "metadata": {
                "description": "Runbook name"
            }
        },
        "runbookPublishContentLink2": {
            "type": "String",
            "metadata": {
                "description": "Runbook content link"
            }
        },
        "automationLocation": {
            "type": "string",
            "metadata": {
                "description": "Azure resources location"
            }
        },
        "sourceControl": {
            "type": "object",
            "metadata": {
                "description": "Source control settings"
            }
        },
        "baseTime": {
            "type": "string",
            "defaultValue": "[utcNow('u')]"
        }
    },
    "variables": {
        "webhookName1": "[concat(parameters('runbookName1'), 'Webhook')]",
        "webhookName2": "[concat(parameters('runbookName2'), 'Webhook')]",
        "WebhookExpiryTime": "[dateTimeAdd(parameters('baseTime'), 'P1Y')]"
    },
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2022-08-08",
            "name": "[parameters('automationAccountName')]",
            "location": "[parameters('automationLocation')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "publicNetworkAccess": true,
                "disableLocalAuth": false,
                "sku": {
                    "name": "Basic"
                },
                "encryption": {
                    "keySource": "Microsoft.Automation",
                    "identity": {}
                }
            },
            "resources": [
                {
                    "type": "runbooks",
                    "apiVersion": "2018-06-30",
                    "name": "[parameters('runbookName1')]",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[parameters('automationAccountName')]"
                    ],
                    "properties": {
                        "runbookType": "PowerShell",
                        "logProgress": false,
                        "logVerbose": false,
                        "description": "Apply user default settings",
                        "publishContentLink": {
                            "uri": "[parameters('runbookPublishContentLink1')]",
                            "version": "1.0.0.0"
                        }
                    }
                },
                {
                    "type": "webhooks",
                    "apiVersion": "2018-06-30",
                    "name": "[variables('webhookName1')]",
                    "dependsOn": [
                        "[parameters('automationAccountName')]",
                        "[parameters('runbookName1')]"
                    ],
                    "properties": {
                        "isEnabled": true,
                        "expiryTime": "[variables('WebhookExpiryTime')]",
                        "runbook": {
                            "name": "[parameters('runbookName1')]"
                        }
                    }
                },
                {
                    "type": "runbooks",
                    "apiVersion": "2018-06-30",
                    "name": "[parameters('runbookName2')]",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[parameters('automationAccountName')]"
                    ],
                    "properties": {
                        "runbookType": "PowerShell",
                        "logProgress": false,
                        "logVerbose": false,
                        "description": "Apply user default settings",
                        "publishContentLink": {
                            "uri": "[parameters('runbookPublishContentLink2')]",
                            "version": "1.0.0.0"
                        }
                    }
                },
                {
                    "type": "webhooks",
                    "apiVersion": "2018-06-30",
                    "name": "[variables('webhookName2')]",
                    "dependsOn": [
                        "[parameters('automationAccountName')]",
                        "[parameters('runbookName2')]"
                    ],
                    "properties": {
                        "isEnabled": true,
                        "expiryTime": "[variables('WebhookExpiryTime')]",
                        "runbook": {
                            "name": "[parameters('runbookName2')]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {
        "webhook": {
            "type": "Array",
            "value": [
                {
                    "resourceGroupName": "[resourceGroup().name]",
                    "AutomationAccountName": "[parameters('automationAccountName')]",
                    "name": "[variables('webhookName1')]",
                    "uri": "[reference(variables('webhookName1')).Uri]",
                    "creationTime": "[reference(variables('webhookName1')).CreationTime]",
                    "expiryTime": "[reference(variables('webhookName1')).ExpiryTime]",
                    "lastModifiedTime": "[reference(variables('webhookName1')).LastModifiedTime]"
                },
                {
                    "resourceGroupName": "[resourceGroup().name]",
                    "AutomationAccountName": "[parameters('automationAccountName')]",
                    "name": "[variables('webhookName2')]",
                    "uri": "[reference(variables('webhookName2')).Uri]",
                    "creationTime": "[reference(variables('webhookName2')).CreationTime]",
                    "expiryTime": "[reference(variables('webhookName2')).ExpiryTime]",
                    "lastModifiedTime": "[reference(variables('webhookName2')).LastModifiedTime]"
                }
            ]
        },
        "automationAccountName": {
            "type": "String",
            "value": "[parameters('automationAccountName')]"
        },
        "sourceControl": {
            "type": "object",
            "value": "[parameters('sourceControl')]"
        }
    }
}